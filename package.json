		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.16.0",
		"@sveltejs/vite-plugin-svelte": "^5.0.0",
		"@types/jsdom": "^21.1.7",
		"@types/node": "^22.13.1",
		"@vitest/ui": "^3.0.8",
		"autoprefixer": "^10.4.20",
		"bits-ui": "^1.3.6",
